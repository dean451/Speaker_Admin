<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h2>
        <%= gravatar_for @user %>
        <%= @user.name %>, <%= @user.email %>
      </h2>
    </section>
  </aside>
    <div class="col-md-8">
      <% if @user.sessions.any? %>
        <h3>Sessions (<%= @user.sessions.count %>)</h3>
        <ol class="sessions">
          <%= render @sessions %>
        </ol>
        <%= will_paginate @sessions %>
      <% end %>
    </div>
</div>
