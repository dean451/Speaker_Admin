<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="session_form">
        <%= render 'shared/session_form' %>
      </section>
    </aside>
      <% if @feed_items.any? %>
        <div class="col-md-8">
          <h3>Session Feed</h3>
          <%= render 'shared/feed' %>
        </div>
      <% else %>
        <!-- display nothing when there are none -->
      <% end %>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>Speaker Admin</h1>

  <h2>
    Speaker Admin Guide
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
